{% extends "../base.njk" %}
{% from "partials/checkbox-list.njk" import renderChecklist %}
{% set readability = content.readability %}

{% block content %}
	<div class="content__block">
		<h1 class="block__heading block__heading--main">
			{{ content.readability.heading }}
		</h1>
		{% for paragraph in content.readability.about %}
			<p class="block__text">
				{{ paragraph }}
			</p>
		{% endfor %}
	</div>

	<section class="content__block">
		<h2 class="block__heading block__heading--secondary" id="heading">
			{{ content.readability.subheading }}
		</h2>
		{{ renderChecklist(readability) }}
	</section>
{% endblock %}
