<div class="footer__container">
	<div class="footer__block">
		<span class="footer__text">
			{{ currentYear }}, {{ site.creator }}
		</span>
		<span class="footer__text">
			{{ site.issue }} <a href="{{ site.urls.githubUrl }}" class="footer__link">GitHub</a> 🐞
		</span>
	</div>
	<div class="footer__block">
		<ul class="footer__nav">
			<li class="footer__nav-item">
				<a href="{{ site.urls.blogUrl }}" class="footer__link">{{ site.blogName }}</a>
			</li>
			<li class="footer__nav-item">
				<a href="{{ site.urls.linkedinUrl }}" class="footer__link">LinkedIn</a>
			</li>
		</ul>
	</div>
</div>
